<% if Current.user %>
    <% User.order(created_at: :desc).all.each do |user| %>
        <div class="card mb-3" style="min-width: 280px;">
        <div class="row g-0">
            <div class="col-md-4">
            <img src="..." alt="user.photo">
            </div>
            <div class="col-md-8">
            <div class="card-body">

                <h5 class="card-title">
                    <%= link_to user.username, user_path(user.id), class: "link-dark fw-bold" %>
                </h5>
                <%= follow_or_unfollow_friend_request(user) %>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
            </div>
        </div>
        </div>
    <% end %>
<% end %>
